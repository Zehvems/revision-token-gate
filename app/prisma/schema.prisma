generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Connection URLs are now configured in prisma.config.ts; remove `url` from schema per Prisma 7+

model Project {
  id            String   @id @default(cuid())
  name          String
  clientName    String?
  includedLimit Int
  workspaceKey  String
  createdAt     DateTime @default(now())

  requests Request[]
}

enum RequestType {
  included
  extra
}

model Request {
  id String @id @default(cuid())

  // Foreign key + relation to Project
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Meter core
  roundNumber Int
  type        RequestType

  // The request content (what client asked to change)
  body String

  createdAt DateTime @default(now())

  // Prevent duplicate round numbers inside the same project
  @@unique([projectId, roundNumber])
  // Fast lookups per project
  @@index([projectId])
}
